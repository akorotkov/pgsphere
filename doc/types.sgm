              <title>Data types</title>
              <tgroup cols="2">
                <colspec colname="col0" align="left"/>
                <colspec colname="col1" align="left"/>
                <thead valign="middle">
                 <row>
                   <entry align="center"><literal>SQL</literal> type name</entry>
                   <entry align="center">spherical type</entry>
                 </row>
                </thead>
                <tbody>
                  <row>
                    <entry>
                      <type>spoint</type>
                    </entry>
